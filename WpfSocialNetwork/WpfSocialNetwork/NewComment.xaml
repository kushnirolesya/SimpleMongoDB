<Window x:Class="WpfSocialNetwork.NewComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSocialNetwork"
        mc:Ignorable="d"
        Title="NewComment" Height="200" Width="350">
    <Grid RenderTransformOrigin="0.503,0.404">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#ffd19c" Offset="0"/>
                <GradientStop Color="#ffb442" Offset="0.05"/>
                <GradientStop Color="#ffd19c" Offset="0.252"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Button Content="Back" HorizontalAlignment="Left" Margin="23,10,0,0" VerticalAlignment="Top" Width="60" Height="29" Click="Back" FontFamily="Viner Hand ITC" Background="#FFFFB93F"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="251,128,0,0" VerticalAlignment="Top" Width="60" Height="29" Click="Add" FontFamily="Viner Hand ITC" Background="#FFFFB93F" RenderTransformOrigin="2.426,8.116"/>
        <TextBox Name="Text" Margin="23,44,17,46"  AcceptsReturn="True"  FontFamily="Champagne &amp; Limousines" FontSize="22" />

    </Grid>
</Window>
